@model string

@if (!String.IsNullOrEmpty(Model))
{
	var statusMessageClass = Model.StartsWith("Erreur") ? "danger" : "success";
	<div class="row justify-content-center">
		<div class="col-12 col-xl-8 alert alert-@statusMessageClass alert-dismissible" role="alert">
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			@Model
		</div>
	</div>

}
