@page
@model ClientProfileModel
@{
	ViewData["Title"] = "Mon profil";
	ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-center mb-3">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row justify-content-center">
	<div class="col-12 col-xl-8">
		<form id="profile-form" method="post" enctype="multipart/form-data">
			<input type="hidden" asp-for="Input.Address.ClientId" />
			<div class="form-floating mb-3">
				<input asp-for="Input.Enterprise" class="form-control mb-3" />
				<label asp-for="Input.Enterprise" class="form-label">Nom de l'entreprise</label>
				<span asp-validation-for="Input.Enterprise" class="text-danger"></span>
			</div>

			<div class="row">
				<div class="col-md-6">
					<div class="form-floating">
						<input asp-for="Input.Address.StreetAddress" class="form-control mb-3" placeholder="Rue">
						<label asp-for="Input.Address.StreetAddress">Rue</label>
						<span asp-validation-for="Input.Address.StreetAddress" class="text-danger text-start d-block mb-3"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-floating">
						<input asp-for="Input.Address.NumberAddress" class="form-control mb-3" placeholder="Numéro">
						<label asp-for="Input.Address.NumberAddress">Numéro</label>
						<span asp-validation-for="Input.Address.NumberAddress" class="text-danger text-start d-block mb-3"></span>

					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-md-6">
					<div class="form-floating">
						<input asp-for="Input.Address.PostCodeAddress" class="form-control mb-3" placeholder="Code Postal">
						<label asp-for="Input.Address.PostCodeAddress">Code Postal</label>
						<span asp-validation-for="Input.Address.PostCodeAddress" class="text-danger text-start d-block mb-3"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-floating">
						<input asp-for="Input.Address.LocalityAddress" class="form-control mb-3" placeholder="Localité">
						<label asp-for="Input.Address.LocalityAddress">Localité</label>
						<span asp-validation-for="Input.Address.LocalityAddress" class="text-danger text-start d-block mb-3"></span>
					</div>
				</div>
			</div>

			<div class="form-floating mb-3">
				<input asp-for="Input.Address.CountryAddress" class="form-control mb-3" placeholder="Pays">
				<label asp-for="Input.Address.CountryAddress">Pays</label>
				<span asp-validation-for="Input.Address.CountryAddress" class="text-danger text-start d-block mb-3"></span>
			</div>

			<div class="mb-3">
				<label class="form-label" asp-for="Input.EnterpriseImageUploaded">Changer le logo de l'entreprise :</label>
				<input asp-for="Input.EnterpriseImageUploaded" type="file" class="form-control" accept=".jpg, .jpeg, .png, .gif" />
			</div>

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<button id="update-profile-client-button" type="submit" class="w-100 btn btn-lg btn-dark">Enregistrer</button>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}