@page
@model EmailModel
@{
    ViewData["Title"] = "Changez votre adresse email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3 class="text-center mb-3">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row justify-content-center">
    <div class="col-12 col-xl-8">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger custom-summary"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating input-group mb-3">
                    <input asp-for="Email" class="form-control" disabled />
                        <div class="input-group-append">
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    <label asp-for="Email" class="form-label"></label>
                </div>
            }
            else
            {
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control mb-3" disabled />
                    <label asp-for="Email" class="form-label"></label>
                </div>
            }
            <div class="form-floating mb-3">
                <input asp-for="Input.NewEmail" class="form-control mb-3" autocomplete="email" aria-required="true" />
                <label asp-for="Input.NewEmail" class="form-label"></label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-dark">Enregistrer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
