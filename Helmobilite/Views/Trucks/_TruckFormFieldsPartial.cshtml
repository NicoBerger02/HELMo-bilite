@model Helmobilite.Models.ViewModels.TruckViewModel

<input type="hidden" asp-for="TruckId" />
<input type="hidden" asp-for="PhotoIsRequired" />

<div class="form-group mb-3">
    <label asp-for="LicensePlate" class="control-label"></label>
    <input asp-for="LicensePlate" class="form-control mb-3" />
    <span asp-validation-for="LicensePlate" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label asp-for="Brand" class="control-label"></label>
    @Html.DropDownListFor(m => m.Brand, new SelectList(Model.Brands), new { @class = "form-select"})
    <span asp-validation-for="Brand" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label asp-for="Model" class="control-label"></label>
    <input asp-for="Model" class="form-control mb-3" />
    <span asp-validation-for="Model" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label asp-for="Payload" class="control-label"></label>
    <input asp-for="Payload" class="form-control mb-3" />
    <span asp-validation-for="Payload" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label class="form-label" asp-for="ImageUploaded"></label>
    <input asp-for="ImageUploaded" type="file" class="form-control mb-3" accept=".jpg, .jpeg, .png, .gif" />
    <span asp-validation-for="ImageUploaded" class="text-danger"></span>
</div>

