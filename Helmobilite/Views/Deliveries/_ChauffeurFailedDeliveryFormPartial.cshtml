@model Helmobilite.Models.ViewModels.ChauffeurFailedDeliveryModel

<hr />
@using (Html.BeginForm("FailedDelivery", "Deliveries", FormMethod.Post))
{
	<div class="row justify-content-center">

		<input type="hidden" asp-for="@Model.DeliveryId" />

		<input type="hidden" asp-for="@Model.WeekOffset" />

		<div class="mb-3 col-8">
			<label asp-for="Motif" class="form-label">Veuillez sélectionner un motif :</label>
			@Html.DropDownListFor(m => m.Motif, Html.GetEnumSelectList<Motif>(), new { @class = "form-select"})
		</div>

		<button type="submit" class="btn btn-dark col-6">Valider</button>
	</div>
}