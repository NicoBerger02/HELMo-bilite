@model Helmobilite.Models.Delivery

@{
    ViewData["Title"] = "Modification de la livraison";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-3">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-xl-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger custom-summary"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ClientId" />
            <input type="hidden" asp-for="Status" />

            <partial name="_ClientDeliveryFormFieldsPartial" />

            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-dark w-100" />
            </div>
        </form>
        <a class="btn mt-3" asp-action="ClientIndex"><i class="fas fa-arrow-left"></i> Retour</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
