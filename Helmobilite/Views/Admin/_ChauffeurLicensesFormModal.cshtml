@model Helmobilite.Models.ViewModels.ChauffeurLicenseViewModel

<div class="modal fade" id="licensesModal" tabindex="-1" role="dialog" aria-labelledby="licensesModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="licensesModallLabel">Gestion des permis</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form asp-action="ChangeLicenses">
					<input type="hidden" asp-for="ChauffeurId" />

					@for (int i = 0; i < Model.SelectedCheckboxes.Count; i++)
					{
						<div class="form-check">
							@Html.CheckBoxFor(m => m.SelectedCheckboxes[i].IsChecked, new { id = "license_chauffeur_" + Model.SelectedCheckboxes[i].Text, @class = "form-check-input" })
							@Html.HiddenFor(m => m.SelectedCheckboxes[i].Text)
							@Html.DisplayFor(m => m.SelectedCheckboxes[i].Text)
						</div>
					}

					<div class="d-flex justify-content-center">
						<button type="submit" class="btn btn-dark w-75">Enregistrer</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>